(defwindow desktop
  :monitor 0
  :stacking "bottom"
  :wm-ignore true
  :exclusive true
  :geometry
  (geometry :width  "100%"
            :height "100%"
            :anchor "bottom right")(desktop))

(defwidget desktop []
  (box
    :class "desktop"
    :style "background-image: url('${EWW_CONFIG_DIR}/../bg')"
    (desktop_clock)
    ))

